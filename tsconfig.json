{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "app",
    "paths": {
      "@/*": ["app/*"],
      "@contexts*": ["contexts/*"],
      "@types*": ["types/*"],
      "@components*": ["components/*"],
      "@converters*": ["converters/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/components/InputErrorMessage/InputErrorMessage.tsx",
    "app/components/CustomInputContainer/CustomInputContainer.jsx",
    "app/category/[id]/page.jsx",
    "app/home/_components/Carousel/Carousel.tsx",
    "app/components/SearchInput/SearchInput.tsx",
    "app/home/_components/SlideContent/SlideContent.tsx",
    "app/store/store.ts"
  ],
  "exclude": ["node_modules"]
}
