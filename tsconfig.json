{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "app",
    "paths": {
      "@/*": ["app/*"],
      "@contexts*": ["contexts/*"],
      "@types*": ["types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/components/InputErrorMessage/InputErrorMessage.tsx",
    "app/components/CustomInputContainer/CustomInputContainer.jsx",
    "app/pages/category/[id]/page.jsx"
  ],
  "exclude": ["node_modules"]
}
